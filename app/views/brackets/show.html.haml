- title "Bracket"
- centered_layout true
- skip_sidebar    true

%h2 Info

.tournament[@tournament]{ 'data-tournament_size' => @tournament.size }
  %pre
    == size: #{@bracket.size}
  
  = form_for_with_bootstrap(@bracket, :html => { :class => 'pools', :id => "pools_#{@tournament.id}" }) do |f| 
    %h2 pools
    - @bracket.pools.each do |pool|
      = render pool, :bracket => @bracket, :f => f
    = f.submit
  .wings
    - @bracket.wings[0..0].each do |wing|
      = render wing
