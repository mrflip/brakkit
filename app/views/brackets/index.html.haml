- title "Brackets"

%table
  %tr
    %th Closed
    %th Tournament
    %th Handle
  - for bracket in @brackets
    %tr
      %td= bracket.closed
      %td= bracket.tournament.name
      %td= bracket.handle
      %td= link_to 'Show', bracket
      %td= link_to 'Edit', edit_bracket_path(bracket)
      %td= link_to 'Destroy', bracket, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Bracket", new_bracket_path
